<%= render 'public/public' %>
<h2>ショッピングカート</h2>
<%= link_to "カートを空にする",destroy_all_cart_items_path,method: :delete %>

<table>
    <thead>
　　　<th>商品名</th>
　　　<th>単価</th>
　　　<th>数量</th>
　　　<th>小計</th>
　　　<th></th>
    </thead>
    　<tbody>
<% @cart_items.each do |cart_item| %>
 <tr>
<td><%= cart_item.item.name %></td>
<td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>

<td>
<%= form_with model: cart_item,url:cart_item_path(cart_item),method: :patch do |f| %>
<%= f.select :amount, *[1..10] %>
<%= f.submit "変更" %>
<% end %>
</td>

<td><%= cart_item.sum_of_price.to_s(:delimited) %></td>

</tr>
</tbody>
</table>

<h3>合計金額</h3>
<%= @total.round.to_s(:delimited) %>

<%= link_to "削除する",cart_item_path(cart_item.id), method: :delete %>

<% end %>

<%= link_to root_path do %>
買い物を続ける
<% end %>

<%= link_to new_order_path do %>
情報入力に進む
<% end %>
