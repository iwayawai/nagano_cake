<%= render 'public/public' %>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

　<div class="row form-group">
　  <%= f.label "名前", class: "col-xs-2" %>
　  <%= f.label "(姓)", class: "col-xs-2"%>
　  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-lg-3" %>
　  <%= f.label "(名)", class: "col-xs-2"%>
　  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-lg-3" %>
　</div>

　<div class="row form-group">
　  <%= f.label "フリガナ", class: "col-xs-2" %>
　  <%= f.label "(セイ)", class: "col-xs-2" %>
　  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-lg-3" %>
　  <%= f.label "(メイ)", class: "col-xs-2" %>
　  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-lg-3" %>
　</div>

  <div class="row form-group">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="row form-group">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="row form-group">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="row form-group">
    <%= f.label "電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="row form-group">
    <%= f.label "パスワード(6文字以上)" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  
  <div class="row form-group">
    <%= f.label "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="text-center">
    <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>
<% end %>
<br>
<h6>既に登録済みの方
<a href="/customers/sign_in">こちら</a>
からログインしてください。
</h6>

</div>
</div>


