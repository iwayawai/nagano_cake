<div class="container">
  <div class="row">
    <div class="col">
    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div>


　      <div class="form-group">
　        <div><%= f.label "名前" %></div>
　        <div class="row">
　          <div><%= f.label "(姓)" %>
　          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></div>
　          <div style="padding-left: 32px;"><%= f.label "(名)" %>
　          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
　        </div>
　      </div>

　   <div class="form-group">
　     <div><%= f.label "フリガナ" %></div>
　     <div class="row">
　       <div><%= f.label "(セイ)" %>
　       <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></div>
　       <div style="padding-left: 32px;"><%= f.label "(メイ)" %>
　       <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></div>
　     </div>
　   </div>

    <div class="form-group">
      <div><%= f.label "メールアドレス" %></div>

           <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <div><%= f.label "郵便番号(ハイフンなし)" %></div>

           <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="form-group">
      <div><%= f.label "住所" %></div>

      <td colspan=3><%= f.text_field :address, autofocus: true, autocomplete: "address",size: 50 %>
    </div>

    <div class="form-group">
      <div><%= f.label "電話番号(ハイフンなし)" %></div>

           <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>

    <div class="form-group">
     <div><%= f.label "パスワード(6文字以上)" %></div>

          <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
     <div><%= f.label "パスワード(確認用)" %></div>

          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    </tbody>
  </table>
</div>

  <div class="text-center">
    <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>
<% end %>
<br>
<h6>既に登録済みの方
<a href="/customers/sign_in">こちら</a>
からログインしてください。
</h6>
    </div>
  </div>
</div>


