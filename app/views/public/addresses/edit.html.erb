<div class="container">
  <div class="row">
  <h2>配送先編集</h2>
  </div>

<%= form_with model: @address, url:address_path, method: :patch do |f| %>

<div class="row mt-3">
  <h6>郵便番号(ハイフンなし)</h6>
  <div style="padding-left:52px;"><%= f.text_field :postal_code %></div>
</div>

<div class="row mt-3">
  <h6>住所</h6>
  <div style="padding-left:191px;"><%= f.text_field :address %></div>
</div>

<div class="row mt-3">
  <h6>宛名</h6>
  <div style="padding-left:191px;"><%= f.text_field :name %></div>
</div>

<div class="row mt-3">
  <%= f.submit '変更内容を保存',class:"btn btn-success" %>
</div>

<% end %>
</div>
