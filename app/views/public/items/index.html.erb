<div class="container">
  <div class="row">
  <h2>商品一覧(全<%= @items.count %>件)</h2>
  </div>
  
    <div class="row">
    <% @items.each do |item| %>
      <div class="col-lg-3">
      <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_image(200,200) %>
      <% end %>
      <h5><%= item.name %></h5>
      <h5>￥<%= item.add_tax_price.to_s(:delimited) %></h5>
      </div>
    <% end %>
  </div>

<%= paginate @item_page %>
</div>