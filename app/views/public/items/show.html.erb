<%= render 'public/public' %>
<%= image_tag @item.get_image,size:"20,20" %>

<h2><%= @item.name %></h2>
<h3><%= @item.introduction %></h3>
<h2>￥<%= @item.add_tax_price.to_s(:delimited) %></h2><h5>(税込)</h5>

<% if @item.is_active == true %>
<%= form_with model:@cart_item, url:cart_items_path,method: :post do |f| %>

<%= f.hidden_field :item_id, :value =>@item.id %>
<%= f.select :amount, *[1..10],{prompt:"個数選択"} %>

<%= f.submit 'カートに入れる' %>
<% end %>
<% end %>