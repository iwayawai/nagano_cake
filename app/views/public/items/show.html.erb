<div class="container">
  <div class="row">
    <div class="col-lg-4">
  <%= image_tag @item.get_image(200,200) %>
    </div>
    <div class="col-lg-8">
    <h3><%= @item.name %></h3><br>
    <h4><%= @item.introduction %></h4><br>
    <h5>￥<%= @item.add_tax_price.to_s(:delimited) %>(税込)</h5><br>
  
  <% if @item.is_active == true %>
  <%= form_with model:@cart_item, url:cart_items_path,method: :post do |f| %>

  <%= f.hidden_field :item_id, :value =>@item.id %>
  <%= f.select :amount, *[1..10],{prompt:"個数選択"} %>

  <%= f.submit 'カートに入れる',class: "btn btn-success" %>
  <% end %>
  <% end %>
   </div>
  </div>
</div>