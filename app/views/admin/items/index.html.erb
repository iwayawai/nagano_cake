<div class="container">
  <div class="row">
  <h2>商品一覧</h2>
  </div>
  
  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
        </td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td><p class="<%= item.is_active ? "text-success" : "text-secondary" %>"><%= item.is_active ? '販売中':'販売停止中' %></p></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="row mx-auto">
    <%= link_to "新規登録",new_admin_item_path,class:"btn btn-success" %>
  </div>
    <%= paginate @items %>
</div>