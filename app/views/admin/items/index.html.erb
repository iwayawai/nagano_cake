<%= render 'admin/admin' %>
<h2>商品一覧</h2>

<h4>商品ID</h4>
<h4>商品名</h4>
<h4>税抜価格</h4>
<h4>ジャンル</h4>
<h4>ステータス</h4>

<% @items.each do |item| %>
<%= item.id %>
<%= link_to admin_item_path(item.id) do %>
<%= item.name %>
<% end %>
<%= item.price.to_s(:delimited) %>
<%= item.genre.name %>
<%= item.is_active ? '販売中':'販売停止中' %>

<% end %>
<%= paginate @items %>
