<div class="container">
  <div class="row mb-5">
  <h2>商品詳細</h2>
  </div>
  
    <div class="row">
      <div><%= image_tag @item.get_image(200,200) %></div>
    </div>
    
      <div class="row mt-5">
      <h6>商品名</h6>
      <div style="padding-left: 200px;"><%= @item.name %></div>
      </div>

      <div class="row">
      <h6>商品説明</h6>
      <div style="padding-left: 183px;"><%= @item.introduction %></div>
      </div>

　    <div class="row">
      <h6>ジャンル</h6>
      <div style="padding-left: 180px;"><%= @item.genre.name %></div>
      </div>

　    <div class="row">
      <h6>税込価格
      <br>（税抜価格）</h6>
      <div style="padding-left: 150px;"><%= @item.add_tax_price.to_s(:delimited) %>
      (<%= @item.price.to_s(:delimited) %>)円</div>
　    </div>

　    <div class="row">
      <h6>販売ステータス</h6>
      <div style="padding-left: 130px;"><p class="<%= @item.is_active ? "text-success" : "text-secondary" %>"><%= @item.is_active ? '販売中':'販売停止中' %></p></div>
　    </div>
　
　    <div class="row mt-5">
      <%= link_to "編集する", edit_admin_item_path,class:"btn btn-success" %>
      </div>
</div>