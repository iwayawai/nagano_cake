<div class="container">
  <div class="row">
  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer),method: :patch do |f| %>
  
  <div class="row mt-5">
  <h6>会員ID</h6>
  <div style="padding-left :100px;"><%= @customer.id %></div>
  </div>
  
  <div class="row mt-2">
  <h6>氏名</h6>
  <div style="padding-left :115px;"><%= f.text_field :last_name %> <%= f.text_field :first_name %></div>
  </div>
  
  <div class="row mt-2">
  <h6>フリガナ</h6>
  <div style="padding-left :83px;"><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></div>
  </div>
  
  <div class="row mt-2">
  <h6>郵便番号</h6>
  <div style="padding-left :83px;"><%= f.text_field :postal_code %></div>
  </div>

 <div class="row mt-2">
 <h6>住所</h6>
 <div style="padding-left :115px;"><%= f.text_field :address,size: 50 %></div>
 </div>

 <div class="row mt-2">
 <h6>電話番号</h6>
 <div style="padding-left :83px;"><%= f.text_field :telephone_number %></div>
 </div>

 <div class="row mt-2">
 <h6>メールアドレス</h6>
 <div style="padding-left :35px;"><%= f.text_field :email %></div>
 </div>

 <div class="row mt-2">
 <h6>会員ステータス</h6>
 <div style="padding-left :35px;"><%= f.radio_button :is_deleted, "有効", checked:true %>有効 <%=f.radio_button :is_deleted, "退会" %>退会</div>
 </div>

 <div class="row mt-5">
 <%= f.submit '変更を保存',class:"btn btn-success" %>
 </div>
 <% end %>