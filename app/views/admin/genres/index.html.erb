<div class="container">
  <div class="row">
  <h3>ジャンル一覧・追加</h3>
  </div>

  <%= form_with model: @genre, url: admin_genres_path,method: :post do |f| %>
  <div class="row mt-3">
  <h5>ジャンル名</h5>
  <div style="padding-left: 20px;"><%= f.text_field :name %></div>
  
  <div class="row ml-5">
  <%= f.submit '新規登録',class:"btn btn-success" %>
  <% end %>
  </div>
  
  <table class="table mt-5">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id),class:"btn btn-success" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>


