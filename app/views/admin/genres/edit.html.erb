<div class="container">
  <div class="row">
  <h2>ジャンル編集</h2>
  </div>

<%= form_with model: @genre, url: admin_genre_path(@genre),method: :patch do |f| %>
  <div class="row mt-5">
  <h5>ジャンル名</h5>
  <div style="padding-left:32px;"><%= f.text_field :name %></div>

  <div class="row ml-5"><%= f.submit '変更を保存',class:"btn btn-success" %></div>
  <% end %>
  </div>