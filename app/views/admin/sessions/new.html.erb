<div class="container">
  <div class="row">
  <h2>管理者ログイン</h2>
  </div>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="row mt-5"><%= f.label :"メールアドレス" %></div>
    <div class="row"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>
  
  <div class="field">
    <div class="row mt-5"><%= f.label :"パスワード" %></div>
    <div class="row"><%= f.password_field :password, autocomplete: "current-password" %></div>
  </div>

  <div class="row mt-3">
  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-primary" %>
  </div>
  </div>
    <% end %>

<%= render "admin/shared/links" %>
  
</div>
